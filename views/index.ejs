<%- include('partials/page-open') %>



<div class="container vh-100 py-3">
    <div class="card h-100">
        <div class="card-header">
            Chat App
            <form class="userNameForm d-flex">
                <label for="userName" name="userName" hidden>Enter User Name</label>
                <input class="form-control text-right align-items-end" id="userName"
                    placeholder="Enter User Name To Begin" style="width: 400px" />
                <button type="submit" class="btn btn-primary">
                    User Name
                </button>
            </form>

        </div>
        <ul id="messages" class="list-group mh-100 flex-grow-1 overflow-auto"></ul>
        <div class="card-footer">
            <form class="chat-form d-flex">
                <input class="form-control chat-input w-100" id="chat-message" />
                <button type="submit" class="btn btn-primary">
                    Send
                </button>
            </form>
        </div>
    </div>
</div>


<%- include('partials/page-close') %>