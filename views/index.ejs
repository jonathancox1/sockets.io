<%- include('partials/page-open') %>



<div class="container vh-100 py-3">
    <div class="card h-100">
        <div class="card-header">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">Chat App</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Public<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Link</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Users
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </li>
                    </ul>
                    <form class="userNameForm form-inline my-2 my-lg-0">
                        <label for="userName" name="userName" hidden>Enter User Name</label>
                        <input class="form-control mr-sm-2" type="text" placeholder="User Name" id="userName">
                        <button class="btn btn-outline-primary my-2 my-sm-0" type="submit"
                            id="userNameButton">Begin</button>
                    </form>
                </div>
            </nav>

        </div>
        <div class="row vh-100 m-0">
            <div class="col-md-9 m-0 p-0">
                <ul id="messages" class="list-group mh-100 flex-grow-1 overflow-auto m-0"></ul>
            </div>
            <div class="d-none d-md-flex col-md-3 bg-light p-0">
                <ul id="users" class="list-group mh-100 flex-grow-1 overflow-auto m-0"></ul>
            </div>

        </div>
        <div class="card-footer">
            <form class="chat-form d-flex">
                <input class="form-control chat-input w-100" id="chat-message" disabled />
                <button type="submit" class="btn btn-primary" id="chat-button" disabled>
                    Send
                </button>
            </form>
        </div>
    </div>
</div>


<%- include('partials/page-close') %>